<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_363b41"
    tools:context=".fragment_viewpager2.FragmentViewpager2Fragment">

    <FrameLayout
        android:id="@+id/contentSecFl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomToolCl"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomToolCl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/balck_99000000">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addOneItemCl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/addMoreItemCl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/addOneItemTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="新增"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addMoreItemCl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/addOneItemCl"
            app:layout_constraintEnd_toStartOf="@id/removeOneItemCl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/addMoreItemTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="新增多个"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/removeOneItemCl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/addMoreItemCl"
            app:layout_constraintEnd_toStartOf="@id/updateOneItemCl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <EditText
                android:id="@+id/removeOneItemEt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:hint="索引号"
                android:inputType="number"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:textColorHint="@color/black_363b41"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/removeOneItemTv"/>

            <TextView
                android:id="@+id/removeOneItemTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:text="移除"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/removeOneItemEt"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/updateOneItemCl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/removeOneItemCl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <EditText
                android:id="@+id/updateOneItemEt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:hint="索引号"
                android:inputType="number"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:textColorHint="@color/black_363b41"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/updateOneItemTv"/>

            <TextView
                android:id="@+id/updateOneItemTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:text="更新"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/updateOneItemEt"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>