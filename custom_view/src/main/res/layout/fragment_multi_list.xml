<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_363b41"
    tools:context=".fragment_viewpager2.MultiListFragment">

    <FrameLayout
        android:id="@+id/containerZeroFl"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/containerOneFl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/containerTwoFl"
        android:layout_marginStart="@dimen/dp_2_5"
        android:layout_marginEnd="@dimen/dp_2_5"
        android:layout_marginBottom="@dimen/dp_3" />

    <FrameLayout
        android:id="@+id/containerOneFl"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintStart_toEndOf="@id/containerZeroFl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/containerThreeFl"
        android:layout_marginStart="@dimen/dp_2_5"
        android:layout_marginEnd="@dimen/dp_2_5"
        android:layout_marginBottom="@dimen/dp_3"/>

    <FrameLayout
        android:id="@+id/containerTwoFl"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/containerThreeFl"
        app:layout_constraintTop_toBottomOf="@id/containerZeroFl"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/dp_2_5"
        android:layout_marginEnd="@dimen/dp_2_5"
        android:layout_marginTop="@dimen/dp_3"/>

    <FrameLayout
        android:id="@+id/containerThreeFl"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintStart_toEndOf="@id/containerTwoFl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerOneFl"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/dp_2_5"
        android:layout_marginEnd="@dimen/dp_2_5"
        android:layout_marginTop="@dimen/dp_3"/>

    <TextView
        android:id="@+id/flagTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试flag"
        android:textSize="@dimen/sp_28"
        android:textColor="@color/red_ff4b51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>