<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glGMH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名："
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/glGMH"
        app:layout_constraintHorizontal_bias="0.1"/>

    <TextView
        android:id="@+id/tvNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="XXX"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/tvName"
        app:layout_constraintBottom_toBottomOf="@id/tvName"
        app:layout_constraintStart_toEndOf="@id/tvName"
        app:layout_constraintEnd_toStartOf="@id/glGMH"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintHorizontal_bias="0.05"/>

    <TextView
        android:id="@+id/tvRepo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="repo："
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/tvName"
        app:layout_constraintStart_toEndOf="@id/glGMH"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"/>

    <TextView
        android:id="@+id/tvRepoValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/tvRepo"
        app:layout_constraintBottom_toBottomOf="@id/tvRepo"
        app:layout_constraintStart_toEndOf="@id/tvRepo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintHorizontal_bias="0.05"/>

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址："
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tvNameValue"
        app:layout_constraintStart_toStartOf="@id/tvName"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tvLocationValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxx"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/tvLocation"
        app:layout_constraintStart_toEndOf="@id/tvLocation"
        app:layout_constraintEnd_toStartOf="@id/glGMH"
        app:layout_constraintBottom_toBottomOf="@id/tvLocation"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintHorizontal_bias="0.05"/>

    <TextView
        android:id="@+id/tvCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公司："
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/tvLocation"
        app:layout_constraintStart_toStartOf="@id/tvRepo" />

    <TextView
        android:id="@+id/tvCompanyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxx"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/tvCompany"
        app:layout_constraintStart_toEndOf="@id/tvCompany"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvCompany"
        app:layout_constrainedWidth="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintHorizontal_bias="0.05"/>

    <TextView
        android:id="@+id/tvHtmlUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="url："
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tvLocationValue"
        app:layout_constraintStart_toStartOf="@id/tvLocation"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tvHtmlUrlValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://www.baidu.com/123456"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/tvHtmlUrl"
        app:layout_constraintBottom_toBottomOf="@id/tvHtmlUrl"
        app:layout_constraintStart_toEndOf="@id/tvHtmlUrl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"/>

</androidx.constraintlayout.widget.ConstraintLayout>